# Notion API Key
NOTION_API_KEY=your_notion_api_key_here

# Notion Database ID where pages will be created
NOTION_DATABASE_ID=your_notion_database_id_here

# Input directory path (relative to the project root or absolute)
INPUT_DIR=../output_markdown

# Runtime options (can also be set via command line flags)
DRY_RUN=false
VERBOSE=false

# API handling options
MAX_RETRIES=3
RETRY_DELAY=1000
REQUESTS_PER_SECOND=3

# Logging options
ENABLE_LOGGING=false
LOG_LEVEL=info
